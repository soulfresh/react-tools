{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "*": ["types/*"]
    },
    "target": "ES6",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
